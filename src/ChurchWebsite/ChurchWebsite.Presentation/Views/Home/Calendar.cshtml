
@{
    ViewData["Title"] = "Calendar of Events";
}

<div class="container">
    
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-12">
            <div class="sub-text-wrapper">
                <div class="sub-text">
                    <div class="sub-text-headline">
                        <h4>
                            Church events will be highlighted here in our calendar. A full listing of events with description will be added to the <a asp-controller="Home" asp-action="Event" class="in-paragraph-link">Events</a> page as they arise. 
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <iframe src="https://calendar.google.com/calendar/embed?title=Burgessville%20Baptist%20Church%20&amp;height=600&amp;wkst=1&amp;bgcolor=%23ffffff&amp;ctz=America%2FToronto" style="border-width:0" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
        </div>
    </div>
    
</div>


